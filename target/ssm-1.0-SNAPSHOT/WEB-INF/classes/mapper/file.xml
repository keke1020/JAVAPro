<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mp.dao.fileDao">
	<resultMap type="file" id="fileResult">
		<id column="ID" property="ID" jdbcType="INTEGER" />
		<!-- 0:custom 1:企画 -->
		<result column="type" property="type" jdbcType="VARCHAR" />
		<result column="parentId" property="parentId"
			jdbcType="VARCHAR" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="changeName" property="changeName"
			jdbcType="VARCHAR" />
		<result column="path" property="path" jdbcType="VARCHAR" />
		<result column="user_id" property="user_id" jdbcType="INTEGER" />
		<result column="user" property="user" jdbcType="VARCHAR" />
		<result column="updatetime" property="updatetime"
			jdbcType="TIMESTAMP" />
		<result column="memo" property="memo"
			jdbcType="VARCHAR" />

	</resultMap>

	<select id="getFilesByParentId" resultMap="fileResult">
		SELECT
		ID,
		name,
		changeName,
		memo,
		path
		from
		file
		where
		parentId = #{id}
		and type = #{type}
	</select>

	<select id="getFileById" resultMap="fileResult">
		SELECT
		ID,
		name,
		changeName,
		memo,
		path
		from
		file
		where
		ID = #{id}
	</select>

	<insert id="insert" parameterType="com.mp.entity.file"
		useGeneratedKeys="true" keyProperty="ID" keyColumn="ID">
		insert into file(`type`,
		`parentId`, `name`, `changeName`, `path`, `user_id`, `updatetime` , `memo`)
		values(
		#{type},
		#{parentId},
		#{name},
		#{changeName},
		#{path},
		#{user_id},
		#{updatetime},
		#{memo}
		)
	</insert>

	<update id="clearParentId" parameterType="com.mp.entity.file">
		UPDATE `file` set `parentId` = null WHERE parentId = #{parentid} and type = #{type}
	</update>

	<update id="updateParentId" parameterType="com.mp.entity.file">
		UPDATE `file`
		<trim prefix="set" suffixOverrides=",">
			`parentId` = #{parentid},
		</trim>
		WHERE
		`ID` in
		<foreach collection="ids" item="id" index="index" open="("
			close=")" separator=",">
			#{id}
		</foreach>
	</update>


	<select id="getLastFinishFilesByParentId" resultMap="fileResult">
		SELECT * from file where parentId = #{id} and type = '2' ORDER BY id desc
	</select>

	<select id="getUploadRirekiByNe" resultMap="fileResult">
		SELECT
			ID,
			type,
			parentId,
			NAME,
			changeName,
			path,
			user_id,
			memo,
			updatetime,
			(
				SELECT
					realname
				FROM
					USER
				WHERE
					ID = user_id
			) AS USER
		FROM
			file
		WHERE
			type = 'ne'
		ORDER BY
			id DESC
	</select>

	<select id="getUploadRirekiByType" resultMap="fileResult">
		SELECT
			ID,
			type,
			parentId,
			NAME,
			changeName,
			path,
			user_id,
			memo,
			updatetime,
			(
				SELECT
					realname
				FROM
					USER
				WHERE
					ID = user_id
			) AS USER
		FROM
			file
		WHERE
			type = #{type}
		ORDER BY
			id DESC
	</select>




</mapper>